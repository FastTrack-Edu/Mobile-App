<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".views.dashboard.tabLayouts.detailVideoLesson.ReviewFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_desc"
            style="@style/MediumHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/additional_text"
            style="@style/MediumHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="(12)"
            app:layout_constraintStart_toEndOf="@id/title_desc"
            app:layout_constraintTop_toTopOf="@id/title_desc" />

        <TextView
            android:id="@+id/view_all"
            style="@style/RegularSubHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:text="Lihat Semua"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@id/title_desc"
            app:layout_constraintTop_toTopOf="@id/title_desc" />

        <TextView
            android:id="@+id/tv_rating"
            style="@style/RegularHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="4,6"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@id/title_desc"
            app:layout_constraintTop_toBottomOf="@id/title_desc" />

        <TextView
            android:id="@+id/tv_rating_max"
            style="@style/RegularHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="/5"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/tv_rating"
            app:layout_constraintTop_toTopOf="@id/tv_rating" />

        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@id/tv_rating_max"
            app:layout_constraintTop_toTopOf="@id/tv_rating" />

        <ImageView
            android:id="@+id/iv_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@id/iv_star"
            app:layout_constraintTop_toTopOf="@id/tv_rating" />

        <ImageView
            android:id="@+id/iv_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@id/iv_star_1"
            app:layout_constraintTop_toTopOf="@id/tv_rating" />

        <ImageView
            android:id="@+id/iv_star_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@id/iv_star_2"
            app:layout_constraintTop_toTopOf="@id/tv_rating" />

        <ImageView
            android:id="@+id/iv_star_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@id/iv_star_3"
            app:layout_constraintTop_toTopOf="@id/tv_rating" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/ic_profile_person"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_rating" />

        <TextView
            android:id="@+id/tv_greeting"
            style="@style/RegularHeadline"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/username"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/iv_user_profile"
            app:layout_constraintTop_toTopOf="@id/iv_user_profile" />

        <ImageView
            android:id="@+id/ivSub_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_user_profile" />

        <ImageView
            android:id="@+id/ivSub_star_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@id/ivSub_star"
            app:layout_constraintTop_toTopOf="@id/ivSub_star" />

        <ImageView
            android:id="@+id/ivSub_star_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@id/ivSub_star_1"
            app:layout_constraintTop_toTopOf="@id/ivSub_star" />

        <ImageView
            android:id="@+id/ivSub_star_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@id/ivSub_star_2"
            app:layout_constraintTop_toTopOf="@id/ivSub_star" />

        <ImageView
            android:id="@+id/ivSub_star_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_star"
            app:layout_constraintStart_toEndOf="@id/ivSub_star_3"
            app:layout_constraintTop_toTopOf="@id/ivSub_star" />

        <TextView
            style="@style/RegularSubHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:justificationMode="inter_word"
            android:text="Kelasnya sangat keren, isinya daging banget. Mentornya juga sabarrr dan baik banget"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivSub_star" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
